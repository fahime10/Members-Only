extends layout

block content
  h1= title

  div(class='container')
      div(class='sidebar')
        a(href='/log-in' class='options') Login

        a(href='/sign-up' class='options') Sign up here
        
      div(class='content')
        each message in messages_list 
          div(class='messages')
            h4(class='title') Posted by Anonymous
            h4 #{message.title}
            p #{message.text}
            p #{message.timestamp}

        else 
          p There are no messages at the moment.