extends layout 

block content 
    h1= title 

    div(class='centralize')
        if user.admin 
            form(method='POST' action='' class='forms')
                input(type='hidden'
                    name='id'
                    required='true'
                    value=message._id)
                div(class='messages')
                    h4(class='title') Posted by #{message.user.username}
                    h4 #{message.title}
                    p #{message.text}
                    p #{message.timestamp}
                    
                p Are you sure you want to delete this message?

                button(type='submit' class='options') Yes
                a(href='/messages' class='options') No